<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carparkinformationura">

    <TextView
        android:id="@+id/ura_address_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_semibold"
        android:text="Address: "
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ura_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/titillium_web"
        android:maxWidth="300dp"
        android:scrollHorizontally="false"
        android:text="Address Unavailable"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ura_address_header"
        app:layout_constraintTop_toTopOf="@+id/ura_address_header" />

    <TextView
        android:id="@+id/carpark_type_ura_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_semibold"
        android:text="Carpark Type: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/ura_address_header"
        app:layout_constraintTop_toBottomOf="@+id/ura_address_header" />

    <TextView
        android:id="@+id/carpark_type_ura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web"
        android:text="Carpark Type Unavailable"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/carpark_type_ura_header"
        app:layout_constraintStart_toEndOf="@+id/carpark_type_ura_header"
        app:layout_constraintTop_toTopOf="@+id/carpark_type_ura_header" />

    <TextView
        android:id="@+id/carpark_remark_ura_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_semibold"
        android:text="Remarks: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/carpark_type_ura_header"
        app:layout_constraintTop_toBottomOf="@+id/carpark_type_ura_header" />

    <TextView
        android:id="@+id/carpark_remark_ura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web"
        android:text="No Remarks"
        android:textColor="@color/black"
        android:maxWidth="300dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/carpark_remark_ura_header"
        app:layout_constraintTop_toTopOf="@+id/carpark_remark_ura_header" />

    <TextView
        android:id="@+id/carpark_ura_rates_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_semibold"
        android:text="Rates: "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/carpark_remark_ura_header"
        app:layout_constraintTop_toBottomOf="@+id/carpark_remark_ura_header"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/carpark_ura_rates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web"
        android:maxWidth="300dp"
        android:text="Rates Unavailable"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toEndOf="@+id/carpark_ura_rates_header"
        app:layout_constraintTop_toTopOf="@+id/carpark_ura_rates_header" />


</androidx.constraintlayout.widget.ConstraintLayout>