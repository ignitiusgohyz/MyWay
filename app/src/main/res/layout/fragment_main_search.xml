<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".MainSearchFragment">

    <ImageButton
        android:id="@+id/fab_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_search"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_text"
        app:layout_constraintStart_toEndOf="@+id/location_text"
        app:layout_constraintTop_toTopOf="@+id/location_text"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:text="@string/where_would_you_like_to_go"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/titillium_web_semibold"
        android:layout_marginEnd="30dp"
        android:maxWidth="250dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>