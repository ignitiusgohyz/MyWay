<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myway_blue"
    tools:context=".NavigationTextFragment">

    <ImageButton
        android:id="@+id/fragment_main_hamburger_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myway_blue"
        android:src="@drawable/ic_hamburger_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/fragment_main_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myway_blue"
        android:src="@drawable/ic_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_main_greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fragment_main_hamburger_menu"
        app:layout_constraintRight_toLeftOf="@id/fragment_main_history"
        android:text="Hello, "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/titillium_web_semibold"
        tools:ignore="HardcodedText" />



</androidx.constraintlayout.widget.ConstraintLayout>