<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_parking_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myway_blue"
    tools:context=".fragment_parking_top">

    <ImageButton
        android:id="@+id/fragment_parking_hamburger_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myway_blue"
        android:src="@drawable/ic_hamburger_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/fragment_parking_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myway_blue"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_parking_destination_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/fragment_parking_go"
        app:layout_constraintStart_toEndOf="@id/fragment_parking_hamburger_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxWidth="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="DESTINATION:\n Destination"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/titillium_web_semibold"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>